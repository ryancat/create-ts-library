{
  "name": "create-typescript-library",
  "version": "1.0.0",
  "description": "nodejs executable for creating typescript library",
  "main": "./dist/main.min.js",
  "types": "./dist/main.d.ts",
  "bin": {
    "create-typescript-library": "./bin/create-typescript-library"
  },
  "scripts": {
    "dev": "yarn run tslint && webpack --mode development",
    "dev:watch": "nodemon --exec 'yarn run dev || exit 1'",
    "tslint": "tslint --project .",
    "build": "yarn run tslint && webpack --mode production",
    "test": "yarn run clean && jest && yarn run clean",
    "test:coverage": "yarn run clean && jest --coverage && yarn run clean",
    "demo:test": "yarn run build && cd demo && yarn install && yarn run add-self && yarn test",
    "clean": "rm -rf dist test-temp",
    "preversion": "yarn run test",
    "version": "yarn run build && git add -A dist"
  },
  "files": [
    "bin",
    "dist",
    "templates",
    "LICENSE",
    "README.md"
  ],
  "repository": "https://github.com/ryancat/create-typescript-library.git",
  "author": "Ryan Chen <xryanchen@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^23.3.7",
    "@types/node": "^10.12.18",
    "@types/source-map": "0.5.2",
    "@types/webpack": "^4.4.21",
    "jest": "^23.6.0",
    "nodemon": "^1.17.5",
    "ts-jest": "^23.10.4",
    "ts-loader": "^5.2.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.10.0",
    "typescript": "^2.9.2",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.8"
  },
  "dependencies": {
    "@types/inquirer": "^0.0.43",
    "@types/shelljs": "^0.8.1",
    "inquirer": "^6.2.1",
    "shelljs": "^0.8.3"
  }
}